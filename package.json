{
  "name": "miz-editor",
  "version": "1.0.0",
  "description": "Extract localizable text from DCS World .miz files",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "start:web": "npx http-server . -p 8080 -o",
    "create-sample": "node samples/create-miz-archive.js",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "build": "electron-forge make",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "dcs",
    "dcs-world",
    "mission-editor",
    "miz",
    "localization",
    "translation"
  ],
  "author": "Miz Editor Contributors",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@playwright/test": "^1.40.0",
    "electron": "^28.0.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "MizEditor",
        "icon": "assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "MizEditor"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        }
      ]
    }
  }
}
